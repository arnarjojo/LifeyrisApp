<!doctype html>
<html>
<head>
	<title>LífeyrisApp</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
</head>
<body>
<%- include partial/header.ejs %> 
<%- include partial/sidebar.ejs %> 
<div class="container">

	<h1><span class="fa fa-tachometer"></span> Dashboard</h1>

	<!-- show any messages that come back with authentication -->
	<% if (message.length > 0) { %>
		<div class="alert alert-danger"><%= message %></div>
	<% } %>
    <div>
        <!-- General FORM -->
        <form action="/dashboard" method="GET">
            <div class="form-group">
                <label>Fæðingardagur</label>
                <input type="date" class="form-control" name="dateOfBirth" value=<%= data.dateOfBirth %> >
            </div>
        </form>
        <form action="/dashboard" method="POST">
            <div class="form-group">
                <label>Aldur við starfslok</label>
                <input type="number" class="form-control" name="starfslokAldur" value=<%= data.data.starfslokAldur %> >
            </div>
            <div class="form-group">
                <label>Innistæða við starfslok</label>
                <input type="number" class="form-control" name="innistaedurLok" value=<%= data.data.innistaedurLok %>>
            </div>
            <div class="form-group">
                <label>Mánaðarleg fjárþörf</label>
                <input type="number" class="form-control" name="manadarlegFjarthorf" value=<%= data.data.manadarlegFjarthorf %> >
            </div>
            <div class="form-group">
                <label>Raunávöxtun til framtíðar</label>
                <input type="number" class="form-control" name="raunavoxtunfram" min="1" max="100" value=<%= data.data.raunavoxtunfram %> >
            </div>
            <div class="form-group">
                <label>Skattur í framtíð</label>
                <input type="number" class="form-control" name="skatturfram" min="1" max="100" value=<%= data.data.skatturfram %> >
            </div>
            <div class="form-group">
                <label>Persónuafsláttur</label>
                <input type="number" class="form-control" name="personuafslattur" value=<%= data.data.personuafslattur %> >
            </div>
            <button type="submit" class="btn btn-warning btn-lg">Vista</button>
        </form>
    </div>


	<hr>

</div>

</div>
</body>
</html>
